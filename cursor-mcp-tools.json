{
  "tools": [
    {
      "name": "knowledge_base_add",
      "description": "Add a document to the knowledge base for semantic search",
      "inputSchema": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Document title"
          },
          "content": {
            "type": "string",
            "description": "Document content"
          },
          "source": {
            "type": "string",
            "description": "Document source (e.g., 'cursor', 'file', 'web')"
          },
          "metadata": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["txt", "md", "code", "documentation"],
                "description": "Document type"
              },
              "tags": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Document tags for categorization"
              },
              "language": {
                "type": "string",
                "description": "Document language (e.g., 'en', 'es')"
              },
              "custom_fields": {
                "type": "object",
                "description": "Additional custom metadata"
              }
            }
          }
        },
        "required": ["title", "content", "source"]
      }
    },
    {
      "name": "knowledge_base_search",
      "description": "Search the knowledge base for relevant documents using semantic search",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query"
          },
          "limit": {
            "type": "integer",
            "default": 5,
            "description": "Maximum number of results to return"
          },
          "similarity_threshold": {
            "type": "number",
            "default": 0.7,
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Minimum similarity score for results"
          },
          "filters": {
            "type": "object",
            "properties": {
              "tags": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Filter by tags"
              },
              "type": {
                "type": "string",
                "description": "Filter by document type"
              },
              "source": {
                "type": "string",
                "description": "Filter by document source"
              }
            }
          },
          "include_metadata": {
            "type": "boolean",
            "default": true,
            "description": "Include document metadata in results"
          }
        },
        "required": ["query"]
      }
    },
    {
      "name": "knowledge_base_stats",
      "description": "Get statistics about the knowledge base",
      "inputSchema": {
        "type": "object",
        "properties": {},
        "additionalProperties": false
      }
    },
    {
      "name": "development_info_search",
      "description": "Search for development-related information and documentation",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query for development information"
          },
          "context": {
            "type": "string",
            "description": "Development context (e.g., 'architecture', 'testing', 'deployment')"
          },
          "limit": {
            "type": "integer",
            "default": 3,
            "description": "Maximum number of results to return"
          }
        },
        "required": ["query", "context"]
      }
    }
  ]
} 