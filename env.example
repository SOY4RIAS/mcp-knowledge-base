# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_COLLECTION_NAME=documents
WEAVIATE_TIMEOUT=30000
WEAVIATE_RETRIES=3

# AI SDK Configuration
AI_SDK_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_API_KEY=your-openai-api-key-here
LOCAL_LLM_BASE_URL=http://localhost:11434
EMBEDDING_DIMENSIONS=1536
EMBEDDING_TIMEOUT=30000
EMBEDDING_RETRIES=3

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TIMEOUT=5000

# Security
JWT_SECRET=your-super-secret-jwt-key-that-is-at-least-32-characters-long
JWT_EXPIRES_IN=24h
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Self-Referential Features
ENABLE_SELF_INDEXING=true
DEVELOPMENT_COLLECTION_NAME=development_docs
AUTO_INDEX_INTERVAL=3600000 