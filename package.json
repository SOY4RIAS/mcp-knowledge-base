{
  "name": "mcp-knowledge-base-server",
  "version": "1.0.0",
  "description": "A comprehensive Model Context Protocol (MCP) server that serves as a knowledge base using vector database technology",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t mcp-knowledge-base .",
    "docker:run": "docker run -p 3000:3000 mcp-knowledge-base"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "knowledge-base",
    "vector-database",
    "weaviate",
    "ai",
    "semantic-search",
    "bun",
    "hono"
  ],
  "author": "MCP Knowledge Base Team",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/openai-compatible": "^1.0.1",
    "@hono/node-server": "^1.8.0",
    "ai": "^3.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "helmet": "^7.1.0",
    "hono": "^4.0.0",
    "jsonwebtoken": "^9.0.0",
    "mammoth": "^1.6.0",
    "marked": "^9.1.0",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "rate-limiter-flexible": "^4.0.0",
    "redis": "^4.6.0",
    "turndown": "^7.1.2",
    "uuid": "^9.0.0",
    "weaviate-ts-client": "^1.6.0",
    "ws": "^8.14.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "@types/cors": "^2.8.0",
    "@types/multer": "^1.4.0",
    "@types/pdf-parse": "^1.1.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "@types/bun": "latest"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}